@helper Table(string name, string klas, List<MvcCodeFirst.Models.Kisiler> Datas)
{
    <table id="@name" class="@klas">
        <thead>
            <tr>

                @for (int i = 2; i < @Datas[0].GetType().GetProperties().Count(); i++)
                {
                    <th>
                        @Datas[0].GetType().GetProperties()[i].ToString().Split(' ')[1]
                    </th>

                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Datas.Count; i++)
            {
                <tr>
                    <td>
                        @Datas[@i].Ad
                    </td>
                    <td>
                        @Datas[@i].Soyad
                    </td>
                    <td>
                        @Datas[@i].Yas
                    </td>
                    <td>



                        <a class="btn btn-success" href="/Home/Duzenle?kisiId=@Datas[i].Id"><span class="glyphicon glyphicon-edit">Düzenle</span></a>
                        @(" ")
                        <a class="btn btn-danger" href="/Home/Sil?kisiId=@Datas[i].Id">
                            <span class="glyphicon glyphicon-remove">Sil</span>
                        </a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    
}
